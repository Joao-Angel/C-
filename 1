#include <iostream>
#include <stack>
#include <cstdlib>
#include <ctime>
using namespace std;

int main(){
	stack<int>pilha;
	srand(time(NULL));
	
	/*pilha.push(10);
	pilha.push(20);
	pilha.push(30);*/
	
	for(int i=1; i<=10;i++){
		int ale = rand()%21;//gera numeros aleatorios de 0 a 20
		pilha.push(ale);
		cout << "Pilha [ " <<i<< " ] = "<<pilha.top()<<endl;
	}
	
	cout << "Tamanho da pilha : "<<pilha.size()<<endl;
	cout << "Topo da pilha : "<<pilha.top()<<endl;
	pilha.pop();
	cout<<endl;
	cout << "Novo Tamanho da pilha : "<<pilha.size()<<endl;
	cout << "Novo Topo da pilha : "<<pilha.top()<<endl;
	
}
